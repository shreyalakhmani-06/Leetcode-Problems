class Solution {
public:
    int maxFrequencyElements(vector<int>& nums) {
        int n=nums.size();
        unordered_map<int,int>mp;
        for(int i=0;i<n;i++){
            mp[nums[i]]++;
        }
        int maxi=0;
        for(auto pair:mp){
            maxi=max(maxi,pair.second);
        }
        int cnt=0;
        for(auto pair:mp){
            if(pair.second==maxi){
                cnt+=maxi;
            }
        }
        return cnt;
    }
};
