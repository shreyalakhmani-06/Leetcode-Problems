class Solution {
public:
    vector<int> rowAndMaximumOnes(vector<vector<int>>& mat) {
        int n=mat.size();
        int maxi=0,ind=0;
        for(int i=0;i<n;i++){
            int cnt=0;
            for(int j=0;j<mat[i].size();j++){
                if(mat[i][j]==1){
                    cnt++;
                }
            }
            if(cnt>maxi){
                maxi=cnt;
                ind=i;
            }
        }
        return {ind,maxi};
    }
};
