class Solution {
public:
    bool isAnagram(string s, string t) {
        if(s.size()!=t.size()){
            return false;
        }
        map<char,int>map;
        for(int i=0;i<s.size();i++){
            map[s[i]]++;
        }
        for(int i=0;i<t.size();i++){
            map[t[i]]--;
        }
        for(int i=0;i<s.size();i++){
            if(map[s[i]]!=0){
                return false;
            }
        }
        return true;
    }
};
