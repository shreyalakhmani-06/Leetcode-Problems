class Solution {
public:
    bool validate_BST(TreeNode*root,long max,long min){
        if(root==NULL){
            return true;
        }
        if(root->val<=min || root->val>=max){
            return false;
        }
        return validate_BST(root->left,root->val,min) && validate_BST(root->right,max,root->val);
    }
    bool isValidBST(TreeNode* root) {
        return validate_BST(root,LONG_MAX,LONG_MIN);
    }
};
