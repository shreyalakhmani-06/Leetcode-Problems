class Solution {
public:
bool solve(TreeNode* t1,TreeNode* t2){
    if(t1==NULL && t2==NULL){
        return true;
    }
    if(t1==NULL || t2==NULL){
        return false;
    }
    if(t1->val!=t2->val){
        return false;;
    }
    return solve(t1->left,t2->right) && solve(t1->right,t2->left);
}
    bool isSymmetric(TreeNode* root) {
        if(root==NULL){
            return true;
        }
        return solve(root->left,root->right);
    }
};
