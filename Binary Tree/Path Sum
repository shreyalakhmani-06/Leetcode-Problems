class Solution {
public:
    bool hasPathSum(TreeNode* root, int targetSum) {
        if(root==NULL){
            return false;
        }
        if(root->left==NULL && root->right==NULL){
            return (root->val==targetSum);
        }
        bool lh=hasPathSum(root->left,targetSum-(root->val));
        bool rh=hasPathSum(root->right,targetSum-(root->val));
        return lh||rh;
    }
};
