class Solution {
public:
int solve(TreeNode*root,int &ans){
    if(root==NULL){
        return 0;
    }
    int left_ht=solve(root->left,ans);
    int right_ht=solve(root->right,ans);
    int dia=left_ht+right_ht;

    ans=max(ans,dia);
    return 1+max(left_ht,right_ht);
}
    int diameterOfBinaryTree(TreeNode* root) {
        int ans=0;
        solve(root,ans);
        return ans;
    }
};
