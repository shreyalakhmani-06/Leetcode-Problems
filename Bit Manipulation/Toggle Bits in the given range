class Solution {
  public:
    int toggleBits(int n, int l, int r) {
        int res=n;
        for(int i=l;i<=r;i++){
            if ((n & (1 << (i - 1))) != 0) {
                res=res^(1<<(i-1));
            }
            else{
                res=res | (1<<(i-1));
            }
        }
        return res;
    }
};
